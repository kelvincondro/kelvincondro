const express = require('express');
const app = express();
const PORT = process.env.PORT || 3000;

app.get('/', (req, res) => {
    res.send('Hello, my name is [NAMA ANDA], NIM: [NIM ANDA], Jurusan: [JURUSAN ANDA]');
});

app.listen(PORT, () => {
    console.log(`Server is running on port ${PORT}`);
});

heroku login

heroku create nama-aplikasi-anda

git add .
git commit -m "Update app.js with personal info"
git push heroku main

heroku open

